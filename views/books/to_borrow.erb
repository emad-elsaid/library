<div class="columns">
  <div class="column">
    <h2 class="title is-3">
      Books borrow requests
    </h2>
    <h3 class="subtitle">
      You are in the waiting list of the following books.
    </h3>
  </div>
</div>

<div class="columns is-mobile is-multiline">
  <% books.each do |book| %>
    <div class="column is-1-tablet is-4-mobile">
      <%= erb :'books/_book', locals: { book: book } %>
    </div>
  <% end %>
</div>
