<div class="card">
  <div class="card-image">
    <figure class="image is-3by4">
      <a href="/users/<%= user.slug %>/books/<%= book.isbn %>">
        <img src="/books/image/<%= book.image || 'default.jpg' %>?v=<%= book.updated_at.to_i %>" loading="lazy">
      </a>
    </figure>
  </div>
  <div class="card-content">
    <p class="title is-5"><%=h book.title %></p>
    <p class="subtitle is-6"><%=h book.author %></p>
  </div>
</div>
