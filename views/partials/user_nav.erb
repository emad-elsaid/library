<div class="container my-4  is-max-widescreen">
  <div class="columns is-mobile">
    <div class="column is-narrow">
      <figure class="image is-32x32">
        <a href="/users/<%= current_user.slug %>">
          <img class="is-rounded" src="<%= current_user.image || '/default_user' %>"/>
        </a>
      </figure>
    </div>
    <div class="column">
      <a href="/users/<%= current_user.slug %>">
        <%= current_user.name %>
      </a>
    </div>

    <% if can?(:create, current_user.books.new) %>
      <div class="column is-narrow">
        <a href="/users/<%= current_user.slug %>/books/new">
          Add a Book 📕
        </a>
      </div>
    <% end %>

    <% if can?(:list_shelves, current_user) %>
      <div class="column is-narrow">
        <a href="/users/<%= current_user.slug %>/shelves">
          Manage Shelves 📚
        </a>
      </div>
    <% end %>

    <div class="column is-narrow">
      <a href="/users/<%= current_user.slug %>/edit">Settings ⚙️</a>
    </div>
    <div class="column is-narrow">
      <a href="/logout" class="has-text-danger">Logout 👋</a>
    </div>
  </div>
</div>
