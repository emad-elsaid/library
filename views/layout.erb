<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>LIBRARY</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
  </head>
  <body>

    <% if can? :logout %>
      <div class="container my-4">
        <div class="columns">
          <div class="column is-narrow">
            <figure class="image is-32x32">
              <a href="/users/<%= current_user.slug %>">
                <img class="is-rounded" src="<%= current_user.image || '/users/default' %>"/>
              </a>
            </figure>
          </div>
          <div class="column">
            <a href="/users/<%= current_user.slug %>">
              <%= current_user.name %>
            </a>
            [ <a href="/logout" class="has-text-danger">Logout</a> ]
          </div>
        </div>
      </div>
    <% end %>

    <section class="hero is-info">
      <div class="hero-body">
        <div class="container">
          <div class="columns">
            <% if user %>
            <div class="column is-narrow">
              <figure class="image is-32x32">
                <img class="is-rounded" src="<%= user.image || '/users/default' %>"/>
              </figure>
            </div>
            <% end %>
            <div class="column">
              <h1 class="title is-capitalized">
                <% if user %>
                <a href="/users/<%= user.slug %>">
                  <% if current_user == user %>
                    Your
                  <% else %>
                    <%= user.name + "\'s" if user %>
                  <% end %>
                <% end %>
                    Library
                </a>
              </h1>
            </div>
            <div class="column has-text-right">

              <% if current_user && can?(:create, user.books.new) %>
                <a href="/users/<%= user.slug %>/books/new" class="button is-primary is-inverted is-outlined">
                  ðŸ“• Add a Book
                </a>
              <% end %>

              <% if can? :login %>
                <form action="/auth/<%= settings.development? ? :developer : :google %>" method="POST">
                  <input type=hidden name=authenticity_token value="<%= env['rack.session'][:csrf] %>">
                  <button class="button is-primary is-inverted is-outlined is-light">
                    Create/Access your library
                  </button>
                </form>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <%= yield %>
      </div>
    </section>

  </body>
</html>
