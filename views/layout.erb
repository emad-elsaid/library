<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:site_name" content="Library" />

    <%= meta_property "og:title" %>
    <%= meta_name :author %>
    <%= meta_name :description %>
